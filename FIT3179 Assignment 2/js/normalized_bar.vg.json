{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "data/suicide_trend_sex.csv"},
  "background": "#eeeeee",
  "width": 200,
  "height": 300,
  "transform": [
  {"calculate": "datum.sex == 'female' ? 'Female' : 'Male'", "as": "gender"},
  {
    "joinaggregate": [{"op": "sum", "field": "suicides_no", "as": "total"}],
    "groupby": ["year"]
  },
  {"calculate": "datum.suicides_no / datum.total", "as": "fraction"}
  ],
  "encoding": {
  "x": {
      "aggregate": "sum",
      "field": "suicides_no",
      "title": "Suicide Numbers Percentage",
      "stack": "normalize",
      "axis": null
  },
  "order": {"field": "gender", "sort": "descending", "title": "Gender"},
  "y": {"field": "year", "type": "ordinal", "sort": "descending","title": "Year", "axis": {"orient": "right", "domain": false, "grid": false, "ticks": false}},
  "color": {
      "field": "gender",
      "type": "nominal",
      "scale": {"range": ["#FFC0CB", "#ADD8E6"]},
      "title": "Gender",
      "legend": {"orient": "left", "padding": 0, "title": null, "offset": 10, "labelAlign": "left"}
  },
  "tooltip": [
      {"field": "year", "type": "ordinal", "title": "Year"},
      {"field": "suicides_no", "type": "quantitative", "format": ".2f",  "title": "Suicide Number"},
      {"field": "gender", "type": "nominal", "title": "Gender"}
  ]
  },
  "layer": [
  {"mark": "bar"},
    {
      "mark": {"type": "text", "dx": -20, "dy": 0, "angle": 0},
      "encoding": {
      "color": {"value": "grey"},
      "text": {"field": "fraction", "type": "quantitative", "format": ".1%"}
      }
    }
  ]
}