{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Suicide Rate over GDP per Capita",
    "data": {
        "url": "data/FIT3179_A2_Countries.csv"
    },
    "width": 600,
    "height": 250,
    "layer": [
        {
        "params": [
            {
                "name": "paintbrush",
                "select": {
                    "type": "point",
                    "on": "mouseover",
                    "nearest": true
                }
            },
            {
                "name": "Region_selection",
                "bind": {
                    "input": "select",
                    "options": [
                        null,
                        "Western Europe",
                        "Eastern Europe",
                        "Southern Europe",
                        "Northern Europe"
                    ],
                    "labels": [
                        "Show All",
                        "Western Europe",
                        "Eastern Europe",
                        "Southern Europe",
                        "Northern Europe"
                    ],
                    "name": "Region Selection: "
                }
            },
            {
                "name": "Year_selection",
                "bind": {
                    "input": "select",
                    "options": [null,"2000","2001","2002","2003","2004","2005","2006","2007","2008","2009","2010","2011","2012","2013","2014","2015","2016"],
                    "labels": ["Show All","2000","2001","2002","2003","2004","2005","2006","2007","2008","2009","2010","2011","2012","2013","2014","2015","2016"],
                    "name": "Year Selection: "
                }
            },
            {
                "name": "GDP_filter",
                "value": 0,
                "bind": {
                    "input": "range",
                    "min": 0,
                    "max": 100000,
                    "step": 10000,
                    "name": "Minimum GDP per Capita: "
                }
            },
            {
            "name": "grid",
            "select": "interval",
            "bind": "scales"
            }
            ],
        "layer": [
            {"mark": "circle"
            }
        ],
        "transform": [
            {
                "filter": "Region_selection == null || datum.region == Region_selection"
            },
            {
                "filter": "Year_selection == null || datum.year == Year_selection"
            },
            {
                "filter": "datum.gdp_per_capita > GDP_filter"
            }
        ],
        "encoding": {        
            "x": {
            "field": "gdp_per_capita",
            "type": "quantitative",
            "title": "GDP per Capita",
            "scale": {
                "domain": [
                    -10,
                    110000
                ]
            }
            },
            "y": {
                "field": "suicide_rate",
                "type": "quantitative",
                "title": "Suicide Rate",
                "scale": {
                    "domain": [
                        -5,
                        50
                    ]
                }
            },
            "color": {
                "field": "region",
                "title": "Region",
                "type": "nominal",
                "scale": {
                    "domain": [
                        "Western Europe",
                        "Eastern Europe",
                        "Southern Europe",
                        "Northern Europe"
                    ],
                    "range": [
                        "#e41a1c",
                        "#984ea3",
                        "#ff7f00",
                        "#a6cee3"
                    ]
                },
            "value": "grey"
            },
            "size": {
                "condition": {
                    "param": "paintbrush",
                    "value": 500
                },
                "field": "population",
                "title": "Population",
                "type": "quantitative",
                "scale": {
                    "domain": [
                        0,
                        10000000
                    ]
                }
            },
            "tooltip": [
                {"field": "country","type": "nominal","title": "Country"},
                {"field": "region","type": "nominal","title": "Region"},
                {"field": "year","type": "nominal","title": "Year"},
                {"field": "suicide_rate","type": "quantitative","format": ".2f","title": "Suicide Rate"},
                {"field": "gdp_per_capita","type": "quantitative","title": "GDP per Capita"},
                {"field": "population","type": "quantitative","title": "Population"}
            ]
        }
        },
        {
        "transform":[{"window": [{"op": "rank", "field": "suicide_rate", "as": "ranking", "param": 0}]},
        {"filter": "datum.ranking == 1"},
        {
            "calculate": "'Highest Suicide Rate '+datum['year']+': '+datum['country']+'='+ datum['suicide_rate']",
            "as": "text_annotation"
        }
        ],
        "encoding": {"text": {"field": "text_annotation"}},
        "mark": {"type": "text", "align": "left", "dy": -130, "dx": -200}
        }
    ]
}