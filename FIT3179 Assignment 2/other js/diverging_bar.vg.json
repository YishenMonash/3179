{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Comparison between 2 genders",
    "data": { "url": "data/suicide_trend_sex.csv"},
    "transform": [
      {"calculate": "datum.sex == 'female' ? 'Female' : 'Male'", "as": "gender"},
      {"calculate": "datum.sex == 'female' ? -datum.suicide_rate : datum.suicide_rate", "as": "Suicide Rate"}
    ],
    "width": 300,
    "height": 200,
    "mark": "bar",
    "encoding": {
      "y": {
        "field": "year",
        "axis": null, "sort": "descending"
      },
      "x": {
        "aggregate": "sum", "field": "Suicide Rate",
        "title": "Suicide Rate",
        "axis": {"format": "s"},
        "scale": {"domain": [-35,35]}
      },
      "color": {
        "field": "gender",
        "scale": {"range": ["#675193", "#ca8861"]},
        "legend": {"orient": "top", "title": null}
      }
    },
    "config": {
      "view": {"stroke": null},
      "axis": {"grid": false}
    }
  }