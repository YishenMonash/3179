{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Suicide Rates in Europe (2010-2016)",
    "width": "container",
    "height": 500,
    "projection": {
        "type": "equirectangular"
    },
    "params": [{
            "name": "Year_selection",
            "value": 2010,
            "bind": {
                "input": "range",
                "min": 2010,
                "max": 2016,
                "step": 1,
                "name": "Year:  "
            }
        }
    ],
    "layer": [{
            "data": {
                "url": "js/ne_110m.json",
                "format": { "type": "topojson", "feature": "ne_110m_.json" }
            },
            "transform": [{
                "calculate": "'Data is not available in ' + datum.properties.NAME",
                "as": "note"
            }],
            "mark": {
                "type": "geoshape",
                "fill": "#ddd",
                "stroke": "white",
                "strokeWidth": 1
            },
            "encoding": { "tooltip": { "field": "note" } }
        },
        {
            "transform": [{
                "lookup": "properties.NAME",
                "from": {
                  "data": {
                    "url": "data/FIT3179_A2_Countries.csv"
                  },
                  "key": "Country",
                  "fields": ["suicide_rate", "population", "gdp_per_capita"]
                }
              },
              {"calculate": "datum.suicide_rate", "as": "suicide_rate"},
              { "filter": "datum.year == Year_selection" }
            ],
            "mark": { "type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5 },
            "encoding": {
                "color": {
                    "field": "suicide_rate",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [5,10,15,20,25],
                        "range": ["#00b300", "#009a00", "#008000", "#006700", "#004d00", "#003400"]
                    },
                    "legend": { "format": ".2s" }
                },
                "tooltip": [
                    {"field": "properties.NAME", "type": "nominal", "title": "Country"},
                    {"field": "population", "type": "quantitative"},
                    {"field": "gdp_per_capita", "type": "quantitative"},
                    {
                      "field": "suicide_rate",
                      "type": "quantitative",
                      "format": ".2f"
                    }
                  ]
            }
        }
    ],
    "config": {}
}