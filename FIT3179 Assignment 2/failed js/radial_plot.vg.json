{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A simple radial chart with embedded data.",
    "width": 200,
    "height": 200,
    "data": {"url": "data/suicide_generation.csv"},
    "transform": [
        {
      "aggregate": [{"op": "sum", "field": "suicides_no", "as": "total"}],
      "groupby": ["generation"]
    }
    ],
    "layer": [{
      "mark": {"type": "arc", "innerRadius": 20, "stroke": "#fff"},    
      "encoding": {
        "theta": {"aggregate": "sum", "field": "total", "type": "quantitative", "stack": true},
        "radius": {"aggregate": "sum", "field": "total", "scale": {"type": "sqrt", "zero": true, "range": [20,100]}},
        "color": {"field": "generation", "type": "nominal", "legend": null},
        "tooltip": [
          {"field": "total", "type": "quantitative", "format": ".0f",  "title": "Suicide Number"},
          {"field": "generation", "type": "nominal", "title": "Generation"}
        ]
      }
    },{
      "mark": {"type": "text", "radiusOffset": 10},
      "encoding": {
        "text": {"field": "total", "type": "quantitative", "format": ".0f"},
        "color": {"value": "black"},
        "theta": {"aggregate": "sum", "field": "total", "type": "quantitative", "stack": true},
        "radius": {"aggregate": "sum", "field": "total", "scale": {"type": "sqrt", "zero": true, "range": [20,100]}}
      }
    }
    ]
  }