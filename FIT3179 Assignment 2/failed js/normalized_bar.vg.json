{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": { "url": "data/suicide_trend_sex.csv"},
    "transform": [
      {"calculate": "datum.sex == 'female' ? 'Female' : 'Male'", "as": "gender"}
    ],
    "height": {"step": 17},
    "encoding": {
      "x": {"field": "year", "title": "Year"}
    },
    "layer": [{
      "mark": "bar",
      "encoding": {
        "y": {
          "aggregate": "sum", "field": "suicides_no_1",
          "title": "Suicide Numbers",
          "stack":  "normalize"
        },
        "color": {
          "field": "gender",
          "scale": {"range": ["#675193", "#ca8861"]}
        }
      }
    }, {
      "mark": {"type": "text", "opacity": 0.9, "color": "white", "angle": 270},
      "encoding": {
        "y": {
          "aggregate": "sum", "field": "suicides_no_1",
          "title": "Suicide Numbers",
          "stack":  "normalize",
          "bandPosition": 0.5
        },
        "text": {
            "aggregate": "sum", "field": "suicides_no_1", "format": ".0f",  
            "title": "Suicide Numbers"
          },
        "detail": {
          "field": "gender"
        }
      }
    }]
  }