{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Comparison between 2 genders",
    "data": { "url": "data/suicide_trend_sex.csv"},
    "transform": [
      {"calculate": "datum.sex == 'female' ? 'Female' : 'Male'", "as": "gender"}
    ],
    "spacing": 0,
    "hconcat": [{
      "transform": [{
        "filter": {"field": "gender", "equal": "Female"}
      }],
      "title": "Female",
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "year", "axis": null, "sort": "descending"
        },
        "x": {
          "aggregate": "sum", "field": "suicide_rate",
          "title": "Suicide Rate",
          "axis": {"format": "s"},
          "sort": "descending",
          "scale": {"domain": [0,30]}
        },
        "color": {
          "field": "gender",
          "scale": {"range": ["#675193", "#ca8861"]},
          "legend": null
        }
      }
    }, {
      "width": 20,
      "view": {"stroke": null},
      "mark": {
        "type": "text",
        "align": "center"
      },
      "encoding": {
        "y": {"field": "year", "type": "ordinal", "axis": null, "sort": "descending"},
        "text": {"field": "year", "type": "quantitative"}
      }
    }, {
      "transform": [{
        "filter": {"field": "gender", "equal": "Male"}
      }],
      "title": "Male",
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "year", "title": null,
          "axis": null, "sort": "descending"
        },
        "x": {
          "aggregate": "sum", "field": "suicide_rate",
          "title": "Suicide Rate",
          "axis": {"format": "s"},
          "scale": {"domain": [0,30]}
        },
        "color": {
          "field": "gender",
          "legend": null
        }
      }
    }],
    "config": {
      "view": {"stroke": null},
      "axis": {"grid": false}
    }
  }
  